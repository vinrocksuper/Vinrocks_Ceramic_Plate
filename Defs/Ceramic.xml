<Defs>
  <ThingDef Name="ArmorSmelterBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <li>ElectricSmelter</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
          <li MayRequire="Ludeon.RimWorld.Anomaly">Bioferrite</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>

  <ThingDef ParentName="ArmorSmelterBase">
    <defName>Apparel_CeramicPlate</defName>
    <label>ceramic plate</label>
    <description>A set of ceramic plates welded together. While rudimentary, it offers reasonable protection against gunshots and stabbings for the torso, but it does nothing to protect the limbs. Notably, it does have a risk of shattering once it has received too much damage, and will injure anyone wearing it.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>220</displayPriority>
    </recipeMaker> 
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/CeramicPlate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>2500</WorkToMake>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>1.5</Mass>
      <Flammability>0.2</Flammability>
      <ArmorRating_Sharp>0.85</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Heat>0.33</ArmorRating_Heat>
      <Insulation_Cold>0</Insulation_Cold>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.08</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Steel>20</Steel>
      <ChunkSlagSteel>2</ChunkSlagSteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/CeramicPlate</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>0.5</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>Armor</li>
    </tradeTags>
    <comps>
      <li Class="VyntekArmory.CompProperties_ShatterOnPierce"></li>
    </comps>
  </ThingDef>
</Defs>
